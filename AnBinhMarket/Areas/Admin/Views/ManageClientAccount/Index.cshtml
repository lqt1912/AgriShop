@using AnBinhMarket.Data.Entities
@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section styles{
<!-- Datepicker CSS -->
<link rel="stylesheet" href="/Asset/css/bootstrap-datetimepicker.min.css" />

<!-- Datatables CSS -->
<link rel="stylesheet"
      href="/Asset/plugins/datatables/datatables.min.css" />

<link href="/Asset/css/material-dashboard.css" rel="stylesheet" />
}

<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col">
                <h3 class="page-title">Tài khoản khách hàng</h3>
            </div>
            <div class="col-auto text-right">
                @*<a href="@Url.Action("Create","ManageAdminAccount")"
                    class="btn btn-primary ml-3">
                    <i class="fas fa-plus"></i> Thêm tài khoản
                    </a>*@
            </div>
        </div>
    </div>
    <!-- /Page Header -->
    <!-- Start alert -->
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <div style="display: none" id="deletee" class="alert alert-danger text-center" role="alert"></div>
        </div>
        <div class="col-4"></div>
    </div>
    <!-- End alert -->

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0 datatable">
                            <thead>
                                <tr>
                                    <th>Tên tài khoản</th>
                                    <th>Mật khẩu</th>
                                    <th>Họ Tên</th>
                                    <th>Email</th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserName</td>

                                        <td>********</td>
                                        <td>@item.HoTen</td>
                                        <td>@item.Email</td>
                                        <td>
                                            @if (item.IsActive == true)
                                            {
                                                <div class="togglebutton">
                                                    <label>
                                                        <input type="checkbox" checked="checked" class="btn-active" data-id="@item.Id">
                                                        <span class="toggle"></span>
                                                    </label>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="togglebutton">
                                                    <label>
                                                        <input type="checkbox" class="btn-active" data-id="@item.Id">
                                                        <span class="toggle"></span>
                                                    </label>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "ManageClientAccount", new { id = item.Id})"
                                           class="btn btn-sm bg-primary-light mr-2">
                                                <i class="far fa-eye mr-1"></i> Chi tiết
                                            </a>
                                            <a href="@Url.Action("Edit", "ManageClientAccount", new { id = item.Id})"
                                           class="btn btn-sm bg-primary-light mr-2">
                                                <i class="far fa-edit mr-1"></i> Sửa
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/Asset/js/jquery-3.5.0.min.js"></script>
<script src="/Asset/js/tkkhachhang_status.js"></script>
