@using AnBinhMarket.Data.Entities
@model TinTuc

@{
    ViewBag.Title = "NewDetails";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var ImagePath = "~/news/" + Model.HinhAnh;
}


<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-8 offset-xl-2">
            <!-- Page Header -->
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Xem chi tiết tin tức</h3>
                    </div>
                </div>
            </div>
            <!-- /Page Header -->

            <div class="card">
                <div class="card-body">
                    <!-- Form -->
                    <form method="post">

                        <div class="form-group">
                            <label>Mã tin tức: </label>
                            @Html.DisplayFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Tiêu đề: </label>
                            @Html.DisplayFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label class="col-md-4">Ảnh minh họa: </label>
                            <img id="output" class="img-rounded" width="200" height="200" src="@Url.Content(@ImagePath)" alt="Ảnh" />
                        </div>
                        <div class="form-group">
                            <label>Mô tả ngắn: </label>
                            @Html.DisplayFor(model => model.MoTaNgan, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Mô tả: </label>
                            <br />
                            @Html.Raw(@Model.MoTaChiTiet)
                        </div>
                        <div class="form-group">
                            <label>Tên người viết: </label>
                            @Html.DisplayFor(model => model.TaiKhoan.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="mt-4">
                            <a href="@Url.Action("News","Manage")" class="btn btn-link">Quay lại</a>
                        </div>
                    </form>
                    <!-- /Form -->
                </div>
            </div>
        </div>
    </div>
</div>


   <script src="~/Asset/js/jquery-3.5.0.min.js"></script>
<script src="~/Asset/plugins/ckeditor/ckeditor.js"></script>
<script>
    var editor = CKEDITOR.replace('txtContent', {
        customConfig: '~/Asset/plugins/ckeditor/config.js'
    })
</script>