@using AnBinhMarket.Data.Entities
@model IEnumerable<TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section styles{
    <!-- Datepicker CSS -->
    <link rel="stylesheet" href="/Asset/css/bootstrap-datetimepicker.min.css" />

    <!-- Datatables CSS -->
    <link rel="stylesheet"
          href="/Asset/plugins/datatables/datatables.min.css" />
}

<div class="content container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col">
                <h3 class="page-title">Quản lý tin tức</h3>
            </div>
            <div class="col-auto">
                <a href="@Url.Action("Create", "ManageNews")"
                   class="btn btn-primary ml-3">
                    <i class="fas fa-plus"></i> Thêm tin tức
                </a>
            </div>
        </div>
    </div>
    <!-- /Page Header -->
    <!-- Start alert -->
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            <div style="display: none" id="deletee" class="alert alert-danger text-center" role="alert"></div>
        </div>
        <div class="col-4"></div>

    </div>
    <!-- End alert -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-center mb-0 datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Tiêu đề</th>
                                    <th>Hình ảnh</th>
                                    <th>Ngày cập nhật</th>
                                    <th class="text-right">Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TieuDe)</td>
                                        <td>
                                            @{ var ImagePath = "~/news/" + item.HinhAnh;}
                                            <img class="rounded service-img mr-1"
                                                 src="@Url.Content(@ImagePath)"
                                                 alt="" />
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.NgayCapNhat)</td>
                                        <td class="text-right">
                                            <a href="@Url.Action("Details","ManageNews",new {id = item.Id})"
                                               class="btn btn-sm bg-primary-light mr-2">
                                                <i class="far fa-eye mr-1"></i>Chi tiết
                                            </a>
                                            <a href="@Url.Action("Edit","ManageNews",new {id = item.Id})"
                                               class="btn btn-sm bg-primary-light mr-2">
                                                <i class="far fa-edit mr-1"></i>Sửa
                                            </a>
                                            <a href="@Url.Action("Delete","ManageNews",new {id = item.Id})"
                                               class="btn btn-sm   bg-danger-light">
                                                <i class="far fa-trash-alt mr-1"></i> Xoá
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
