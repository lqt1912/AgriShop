@model X.PagedList.IPagedList<SanPham>
@using AnBinhMarket.Data
@using AnBinhMarket.Data.Entities
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@inject ApplicationDbContext _context
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<style>
    .carousel-caption {
        color: black;
        font-weight: bold
    }

    .cat-list {
        list-style-type: disc
    }

    .cat-list-det {
        margin-left: 20px
    }

    .cat-link {
        color: black;
    }

        .cat-link:hover {
            color: red;
        }

    h3 {
        font-weight: 300;
        display: inline-block;
        padding-bottom: 5px;
        position: relative;
        text-align:left
    }

        h3:before {
            content: "";
            position: absolute;
            width: 50%;
            height: 1px;
            bottom: 0;
            left: 25%;
            border-bottom: 2px solid #016200;
        }
</style>
<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/slider-1.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h2 style="color: black">Ổi bốn mùa</h2>
                    <p style="color: black">Ổi bốn mùa mua ở đâu đấy</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/slider-2.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h2 style="color: black">Gạo siêu sạch</h2>
                    <p style="color: black">Gạo siêu sạch không được ăn</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/slider-3.jpg" alt="Third slide">
                <div class="carousel-caption d-none d-md-block">
                    <h2 style="color: black">Cam sành 0 đồng</h2>
                    <p style="color: black">Cam sành 0 đồng tính tiền gấp đôi</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<section class="section recent-part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading pt-2">
                    <h3 class="text-left">sản phẩm giảm giá</h3>
                </div>
            </div>
        </div>
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="product-card">
                        <div class="product-media">
                            <img src="@Url.Content("~/products/" + item.HinhAnh)"
                             alt="product" style="width:100%;height:150px" class="img-responsive center-block" />
                        </div>
                        <div class="product-content">
                            <h6 class="product-name">
                                <a href="@Url.Action("Detail", "Product", new { id = item.Id })">@item.TenSP</a>
                            </h6>
                            @if (item.GiaKM > 0 && item.GiaKM < item.Gia)
                            {
                                <h6 class="product-price row d-flex justify-content-between ">
                                    <span class="hdk-price"> <s>@string.Format("{0:#,##}", item.Gia) vnđ </s></span>
                                    <span class="hdk-price-1" style="color: red; font-weight: bold">@string.Format("{0:#,##}", item.GiaKM) vnđ</span>
                                </h6>
                            }
                            else
                            {
                                <h6 class="product-price ">
                                    <span class="hdk-price">@string.Format("{0:#,##}", item.Gia) vnđ</span>
                                </h6>
                            }


                            <a href="/Checkout/Additem?productId=@item.Id&quantity=1" class="product-add" title="Thêm vào giỏ">
                                <i class="fas fa-shopping-basket"></i><span>Thêm vào giỏ hàng</span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="section-btn-25">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions()
                    {
                    LiElementClasses = new string[] { "page-item", "page-link" }
                    })
                </div>
            </div>
        </div>
    </div>

</section>

<section class="section recent-part">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading pt-2">
                    <h3 class="text-left">danh mục sản phẩm của cửa hàng</h3>
                </div>
            </div>
        </div>
        <ul class="cat-list">
            @foreach (var item in _context.DanhMucs.Where(x => !x.IsDeleted).ToList())
            {
                <li class="cat-list-det">
                    <h4><a class="cat-link" href="@Url.Action("Detail","Category", new { id = item.Id, Area="" })">@item.TenDanhMuc</a></h4>
                </li>
            }
        </ul>


    </div>

</section>



