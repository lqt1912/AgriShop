@section styles{
    <link href="~/css/custom/contact2.css" rel="stylesheet" />
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/js/custom/contact.js"></script>
}

<section class="section">
    <div class="container bg-white my-2 py-3">
        <div class="row">
             <div class="col-lg-6">
                <div class="row my-3">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7627298.013570166!2d105.39815416319703!3d21.022015763347532!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ab5f01f24463%3A0x167839be8d6a7e91!2zQ2jhu6MgTG9uZyBCacOqbg!5e0!3m2!1svi!2s!4v1650775393917!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
            <div class="col-lg-6 contact">
                <div class="row">
                    <h5 class="title-contactus">GỬI PHẢN HỒI CHO CHÚNG TÔI</h5>
                    <form class="user-form">
                        @await Component.InvokeAsync("_DC_LienHe")
                    </form>
                    <div class="form-button">
                        <button id="btnSend">Gửi liên hệ</button>
                    </div>
                </div>

            </div>
           
        </div>
    </div>
</section>

<script>
     document.getElementById("btnSend").addEventListener('click', () => {
        if (document.getElementById("txtAddress").value == '') {
            alert('Vui lòng nhập địa chỉ của bạn')
        }
        else if (document.getElementById("txtContent").value == '') {
            alert('Vui lòng nhập Nội dung')
        }
    })
</script>

