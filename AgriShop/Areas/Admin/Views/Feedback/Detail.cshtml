@using AnBinhMarket.Data.Entities
 @model PhanHoi

 @{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-8 offset-xl-2">
            <!-- Page Header -->
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Xem chi tiết phản hồi khách hàng</h3>
                    </div>
                </div>
            </div>
            <!-- /Page Header -->

            <div class="card">
                <div class="card-body">
                    <!-- Form -->
                    <form method="post">

                        <div class="form-group">
                            <label>Mã phản hồi: </label>
                            @Html.DisplayFor(model => model.Id, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Họ tên: </label>
                            @Html.DisplayFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại: </label>
                            @Html.DisplayFor(model => model.SoDT, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Email: </label>
                            @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ: </label>
                            @Html.DisplayFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label>Nội dung: </label>
                            @Html.DisplayFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="mt-4">
                            <a href="@Url.Action("Index","Feedback")" class="btn btn-link">Quay lại</a>
                        </div>
                    </form>
                    <!-- /Form -->
                </div>
            </div>
        </div>
    </div>
</div>
