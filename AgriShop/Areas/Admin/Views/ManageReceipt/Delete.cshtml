@using AnBinhMarket.Data.Entities
@model HoaDon

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-8 offset-xl-2">
            <!-- Page Header -->
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Bạn có chắc chắn muốn xóa hóa đơn không?</h3>
                    </div>
                </div>
            </div>
            <!-- /Page Header -->

            <div class="card">
                <div class="card-body">
                    <!-- Form -->
                     
                        <div class="form-group">
                            <label><strong>Tên khách hàng:</strong></label>
                            @Html.DisplayFor(model => model.GioHang.TaiKhoan.HoTen, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group">
                            <label><strong>Ngày đặt:</strong></label>
                            @Html.DisplayFor(model => model.NgayTao, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <div class="form-group">
                            <label><strong>Trạng thái:</strong></label>
                            @Html.DisplayFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            <label><strong>Phí ship:</strong> </label>
                            @Html.DisplayFor(model => model.PhiShip, new { htmlAttributes = new { @class = "form-control" } })
                        </div>

                        <div class="form-group">
                            <label><strong>Ghi chú:</strong> </label>
                            @Html.DisplayFor(model => model.ChuY, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>

                        <div class="form-group">
                            <label><strong>Địa chỉ nhận hàng:</strong> </label>
                             @Html.DisplayFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>
                        <div class="mt-4">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <button class="btn btn-primary" type="submit">
                                    Xóa
                                </button>
                                <a href="@Url.Action("Index","ManageReceipt")" class="btn btn-link">Huỷ</a>
                            }

                        </div>
                   
                    <!-- /Form -->
                </div>
            </div>
        </div>
    </div>
</div>
